        <Element Name="fld_{$fld.name}" 
                 {if $fld.tabSet}TabSet="{$fld.tabSet}"{/if}
                 ElementSet="{$fld.elementSet}" 
                 Class="LabelImage" 
                 UrlPrefix="{literal}{APP_URL}{/literal}"
                 FieldName="{$fld.name}" 
                 Label="{$fld.label}" 
                 AllowURLParam="{if $fld.name eq 'Id'}Y{else}N{/if}"/>
                 
